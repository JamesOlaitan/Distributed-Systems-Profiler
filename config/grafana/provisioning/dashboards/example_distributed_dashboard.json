{
    "title": "Distributed System Metrics",
    "uid": "distributed-system",
    "version": 1,
    "schemaVersion": 36,
    "panels": [
      {
        "title": "Latency P95 (histogram)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_latency_seconds_bucket[1m])) by (le, service))",
            "legendFormat": "P95 {{service}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Throughput (RPS)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "B"
          }
        ]
      },
      {
        "title": "Error Rate (eps)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_errors_total[1m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "C"
          }
        ]
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    }
  }